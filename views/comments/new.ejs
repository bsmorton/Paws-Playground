<% include ../partials/header %>
    
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="text-center">Add New Comment To <%= dogpark.name %></h1>
                <div style="width: 30%; margin: 25px auto;">
                    
                    <form action="/dogparks/<%= dogpark._id %>/comment" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="text">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[author]" placeholder="author">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    
                    <a href="/dogparks/<%= dogpark._id %>">Go Back</a>
                </div>
            </div>
            
        </div>
    </div>

<% include ../partials/footer %>