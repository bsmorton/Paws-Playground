<% include ../partials/header %>

<h1><%= dogpark.name %></h1>

<h4><%= dogpark.address %></h4>

<img src="<%= dogpark.image %>" width=500px height=300px>

<p><%= dogpark.description %></p>

<p>
    <a class="btn btn-success" href="/dogparks/<%= dogpark._id %>/comment/new">Add New Comment</a>
</p>

<% dogpark.comments.forEach(function(comment){ %>
    <p>
        <%= console.log("author "+comment.author) %>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }); %>

<a href="/dogparks">Go Back</a>

<% include ../partials/footer %>