<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Paw's Playground</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="img-fluid" src="<%= dogpark.image %>">
                <div class="card-body">
                    <h4><a href="http://www.google.com" class="card-link"><%= dogpark.name %></a></h4>
                    <h4><%= dogpark.address %></h4>
                    <p><%= dogpark.description %></p>
                    <p>
                        <em>Submitted By <%= dogpark.author.username %></em>
                    </p>
                </div>
            </div>
            <div class="card bg-light">
                <div class="card-header bg-light">
                    <a class="btn btn-success ailgn-top float-right" href="/dogparks/<%= dogpark._id %>/comment/new">Add New Comment</a>
                </div>
                <div class="card-body">
                    <% dogpark.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="float-right">10 days ago</span>
                                <p>
                                    <%= comment.text %> 
                                </p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>